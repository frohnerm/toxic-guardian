{
  "manifest_version": 3,
  "name": "Toxic Guardian (Local)",
  "version": "0.1.0",
  "description": "Scans page text for harassment/toxicity locally. No cloud calls.",
  "action": {
    "default_title": "Toxic Guardian",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "contextMenus", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/highlighter.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "ml/inference.js",
        "ml/preprocess.js",
        "ml/model.onnx",
        "vendor/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
